@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav navbar-nav navbar-right" }))
    {

        @Html.AntiForgeryToken()
        <li>
            @Html.ActionLink("My Portfolio","MyPortfolio","Portfolio")
        </li>

        <li>
            <a class="smoth-scroll" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </li>
    }
}
else
{

    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", _class = "smoth-scroll" })</li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", _class = "smoth-scroll" })</li>

}
